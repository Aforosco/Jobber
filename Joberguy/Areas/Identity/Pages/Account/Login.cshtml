@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Login</h1>
<d<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0">LOGIN</h2>
            </div>
            <div class="card-body p-4">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck">
                        <label class="form-check-label" for="rememberMeCheck">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary shadow-sm">
                        Log in
                    </button>
                </form>
            </div>

            <div class="card-footer text-center">
                <p>
                    <small>New user? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold">Register here</a></small>
                </p>
                <p>
                    <small><a asp-page="./ForgotPassword" class="text-danger">Forgot your password?</a></small>
                </p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
