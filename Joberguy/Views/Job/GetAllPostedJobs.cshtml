@model IEnumerable<Joberguy.Data.Job>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllPostedJobs</title>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary">Job Listings</h2>

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Job
                </a>
            }
        </div>

        <div class="table-responsive shadow-lg p-3 bg-white rounded">
            <table class="table table-hover table-bordered">
                <thead class="table-dark text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.JobTitle)</th>
                        <th>@Html.DisplayNameFor(model => model.JobDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.JobLocation)</th>
                        <th>@Html.DisplayNameFor(model => model.JobRequirement)</th>
                        <th>@Html.DisplayNameFor(model => model.postDateTime)</th>
                        <th>@Html.DisplayNameFor(model => model.expiringDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.JobTitle)</td>
                            <td class="text-truncate" style="max-width: 250px;">
                                @Html.DisplayFor(modelItem => item.JobDescription)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.JobLocation)</td>
                            <td class="text-truncate" style="max-width: 200px;">
                                @Html.DisplayFor(modelItem => item.JobRequirement)
                            </td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.postDateTime)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.expiringDate)</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                    <i class="bi bi-eye"></i> Details
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
