@model IEnumerable<Joberguy.Models.MyApplicationViewModel>


    <body>
    <div class="container mt-4">
        <h2 class="mb-4">My Applications</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.applicationId)</th>
                        <th>@Html.DisplayNameFor(model => model.JobTitle)</th>
                        <th>@Html.DisplayNameFor(model => model.JobLocation)</th>
                        <th>@Html.DisplayNameFor(model => model.ApplicationDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.applicationId)</td>
                            <td>@Html.DisplayFor(modelItem => item.JobTitle)</td>
                            <td>@Html.DisplayFor(modelItem => item.JobLocation)</td>
                            <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.applicationId }, new { @class = "btn btn-sm btn-primary mr-1" })
                                @Html.ActionLink("View", "ViewSingleApplication", new { ApplicationId = item.applicationId }, new { @class = "btn btn-sm btn-info mr-1" })
                                @Html.ActionLink("Withdraw", "Delete", new { id = item.applicationId }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>

